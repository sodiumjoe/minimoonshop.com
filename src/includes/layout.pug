mixin layout(title)
  doctype html
  html(lang='en')
    head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      title minimoon#{ title ? ` - ${title}` : ''}
      link(rel='stylesheet', type='text/css', href='/index.css')
      link(rel='icon', type='image/png', href='/img/beverlymoon.png')
    body(class=title)
      #content
        nav#nav
          a#logo(href='/')
            img(src='/img/MinimoonLogo.png', alt='minimoon')
        block
      footer#footer
        ul
          -
            var items = [{
              href: 'https://twitter.com/heyminimoon',
                src: '/img/twitter.svg',
                alt: 'twitter',
            }, {
              href: 'https://www.instagram.com/heyminimoon/',
              src: '/img/instagram.svg',
              alt: 'instagram',
            }, {
              href: 'https://www.facebook.com/heyminimoon',
              src: '/img/facebook.svg',
              alt: 'facebook',
            }, {
              href: 'https://www.pinterest.com/minimoonshop/teeny-teethers/',
              src: '/img/pinterest.svg',
              alt: 'pinterest',
            }, {
              href: 'mailto:beverly@minimoonshop.com',
              src: '/img/email.svg',
              alt: 'email',
            }];

          each item in items
            li
              a(href=item.href)
                img(src=item.src, alt=item.alt)
